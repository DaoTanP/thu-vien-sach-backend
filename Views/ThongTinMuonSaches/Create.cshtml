@model QuanLyThuVien.Models.ThongTinMuonSach

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo bản ghi</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col mb-3">
                @Html.LabelFor(model => model.NguoiMuon_Id, "NguoiMuon_Id", htmlAttributes: new { @class = "form-label" })
                <div class="col">
                    @Html.DropDownList("NguoiMuon_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NguoiMuon_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col mb-3">
                @Html.LabelFor(model => model.Sach_Id, "Sach_Id", htmlAttributes: new { @class = "form-label" })
                <div class="col">
                    @Html.DropDownList("Sach_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sach_Id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col mb-3">
                @Html.LabelFor(model => model.NgayMuon, htmlAttributes: new { @class = "form-label" })
                <div class="col">
                    @Html.EditorFor(model => model.NgayMuon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col mb-3">
                @Html.LabelFor(model => model.NgayTra, htmlAttributes: new { @class = "form-label" })
                <div class="col">
                    @Html.EditorFor(model => model.NgayTra, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayTra, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-auto mb-3">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                Quay lại
            </a>
            <input type="submit" value="Tạo" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
