@model QuanLyThuVien.Models.DanhSachYeuThich

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card overflow-auto">
        <div class="card-body">
            <h1 class="card-title">Chỉnh sửa bản ghi</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="col mb-3">
                    @Html.LabelFor(model => model.NguoiDung_Id, new { @class = "form-label" })
                    <div class="col">
                        @Html.DropDownList("NguoiDung_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NguoiDung_Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col mb-3">
                    @Html.LabelFor(model => model.Sach_Id, new { @class = "form-label" })
                    <div class="col">
                        @Html.DropDownList("Sach_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Sach_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-auto mb-3">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    Quay lại
                </a>
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
