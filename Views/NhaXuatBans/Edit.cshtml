@model QuanLyThuVien.Models.NhaXuatBan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Chỉnh sửa bản ghi <strong>@Html.DisplayFor(model => model.TenNhaXuatBan)</strong></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.TenNhaXuatBan)
            <div class="col">
                @Html.EditorFor(model => model.TenNhaXuatBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNhaXuatBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    Quay lại
                </a>
                <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
